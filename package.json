{
  "name": "learn-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "BABEL_ENV=dev next dev",
    "build": "BABEL_ENV=dev next build",
    "start": "BABEL_ENV=test next start",
    "test": "BABEL_ENV=test mocha --recursive --require @babel/register",
    "test:watch": "npm run test -- --watch",
    "eslint": "eslint src test",
    "eslint:fix": "eslint src test --fix"
  },
  "dependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "babel-plugin-module-name-mapper": "^1.2.0",
    "chai": "^4.3.0",
    "date-fns": "^2.17.0",
    "gray-matter": "^4.0.2",
    "mocha": "^8.3.0",
    "next": "^10.0.0",
    "node-mocks-http": "^1.10.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1"
  },
  "devDependencies": {
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "enzyme": "^3.11.0",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.0.9",
    "jsdom": "16.4.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "^10.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --quiet",
      "pre-push": "npm lint"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,tsx,yaml}": "prettier --write"
  }
}
